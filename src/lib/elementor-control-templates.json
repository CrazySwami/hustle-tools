    "input": {
      "label": "Input Field",
      "content": [
        {
          "id": "placeholder",
          "type": "TEXT",
          "label": "Placeholder",
          "default": ""
        },
        {
          "id": "input_type",
          "type": "SELECT",
          "label": "Input Type",
          "options": ["text", "email", "url", "tel", "number", "password", "search"],
          "default": "text"
        },
        {
          "id": "required",
          "type": "SWITCHER",
          "label": "Required",
          "default": "no"
        }
      ],
      "style": [
        {
          "id": "typography",
          "type": "TYPOGRAPHY",
          "label": "Typography",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "text_color",
          "type": "COLOR",
