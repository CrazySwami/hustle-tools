          "property": "background-color"
        },
        {
          "id": "border",
          "type": "BORDER",
          "label": "Border",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "border_radius",
          "type": "DIMENSIONS",
          "label": "Border Radius",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "border-radius"
        },
        {
          "id": "padding",
          "type": "DIMENSIONS",
