    },
    "a": {
      "label": "Link",
      "content": [
        {
          "id": "link_text",
          "type": "TEXT",
          "label": "Link Text",
          "default": "Click here",
          "dynamic": true
        },
        {
          "id": "link_url",
          "type": "URL",
          "label": "Link",
          "default": "#",
          "dynamic": true
        }
      ],
      "style": [
        {
          "id": "typography",
          "type": "TYPOGRAPHY",
          "label": "Typography",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "text_color",
          "type": "COLOR",
          "label": "Text Color",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "color"
        },
        {
          "id": "hover_color",
          "type": "COLOR",
          "label": "Hover Color",
          "selector": "{{WRAPPER}} {{SELECTOR}}:hover",
          "property": "color"
        }
      ]
    },
    "button": {
      "label": "Button",
      "content": [
        {
          "id": "button_text",
          "type": "TEXT",
          "label": "Text",
          "default": "Click me",
          "dynamic": true
        },
        {
          "id": "button_link",
          "type": "URL",
          "label": "Link",
          "dynamic": true
        },
        {
          "id": "button_icon",
          "type": "ICONS",
          "label": "Icon"
        },
        {
          "id": "icon_align",
          "type": "CHOOSE",
          "label": "Icon Position",
          "default": "left",
          "options": {
            "left": { "title": "Left", "icon": "eicon-h-align-left" },
            "right": { "title": "Right", "icon": "eicon-h-align-right" }
          }
        }
      ],
      "style": [
        {
          "id": "typography",
          "type": "TYPOGRAPHY",
          "label": "Typography",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "text_color",
          "type": "COLOR",
          "label": "Text Color",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "color"
        },
        {
          "id": "background_color",
          "type": "COLOR",
          "label": "Background Color",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "background-color"
        },
        {
          "id": "border",
          "type": "BORDER",
          "label": "Border",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "border_radius",
          "type": "DIMENSIONS",
          "label": "Border Radius",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "border-radius"
        },
        {
          "id": "box_shadow",
          "type": "BOX_SHADOW",
          "label": "Box Shadow",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "hover_color",
          "type": "COLOR",
          "label": "Hover Text Color",
          "selector": "{{WRAPPER}} {{SELECTOR}}:hover",
          "property": "color"
        },
        {
          "id": "hover_background",
          "type": "COLOR",
          "label": "Hover Background",
          "selector": "{{WRAPPER}} {{SELECTOR}}:hover",
          "property": "background-color"
        },
        {
          "id": "hover_border_color",
          "type": "COLOR",
          "label": "Hover Border Color",
          "selector": "{{WRAPPER}} {{SELECTOR}}:hover",
          "property": "border-color"
        }
      ],
      "advanced": [
        {
          "id": "padding",
          "type": "DIMENSIONS",
          "label": "Padding",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "padding"
        },
        {
          "id": "margin",
          "type": "DIMENSIONS",
          "label": "Margin",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "margin"
        }
      ]
    },
    "img": {
      "label": "Image",
      "content": [
        {
          "id": "image",
          "type": "MEDIA",
          "label": "Choose Image",
          "default": { "url": "" }
        },
        {
          "id": "alt_text",
          "type": "TEXT",
          "label": "Alt Text",
          "dynamic": true
        },
        {
          "id": "link",
          "type": "URL",
          "label": "Link",
          "dynamic": true
        },
        {
          "id": "caption",
          "type": "TEXT",
          "label": "Caption",
          "dynamic": true
        }
      ],
      "style": [
        {
          "id": "width",
          "type": "SLIDER",
          "label": "Width",
          "range": { "min": 0, "max": 100, "unit": "%" },
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "width"
        },
        {
          "id": "height",
          "type": "SLIDER",
          "label": "Height",
          "range": { "min": 0, "max": 1000, "unit": "px" },
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "height"
        },
        {
          "id": "object_fit",
          "type": "SELECT",
          "label": "Object Fit",
          "options": ["fill", "contain", "cover", "none", "scale-down"],
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "object-fit"
        },
        {
          "id": "border",
          "type": "BORDER",
          "label": "Border",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "border_radius",
          "type": "DIMENSIONS",
          "label": "Border Radius",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "border-radius"
        },
        {
          "id": "box_shadow",
          "type": "BOX_SHADOW",
          "label": "Box Shadow",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "opacity",
          "type": "SLIDER",
          "label": "Opacity",
          "range": { "min": 0, "max": 1, "step": 0.1 },
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "opacity"
        },
        {
          "id": "hover_opacity",
          "type": "SLIDER",
          "label": "Hover Opacity",
          "range": { "min": 0, "max": 1, "step": 0.1 },
          "selector": "{{WRAPPER}} {{SELECTOR}}:hover",
          "property": "opacity"
        },
        {
          "id": "css_filters",
          "type": "CSS_FILTER",
          "label": "CSS Filters",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        }
      ]
    },
    "div": {
      "label": "Container",
      "style": [
        {
          "id": "background",
          "type": "BACKGROUND",
          "label": "Background",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "border",
          "type": "BORDER",
