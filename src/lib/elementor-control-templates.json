    "custom": "Custom"
  },
  "widgetIcons": {
    "heading": "eicon-heading",
    "text": "eicon-text",
    "button": "eicon-button",
    "image": "eicon-image",
    "video": "eicon-play",
    "list": "eicon-bullet-list",
