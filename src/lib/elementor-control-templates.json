{
  "elementControls": {
    "h1": {
      "label": "Heading",
      "content": [
        {
          "id": "heading_text",
          "type": "TEXT",
          "label": "Heading Text",
          "default": "",
          "dynamic": true
        },
        {
          "id": "html_tag",
          "type": "SELECT",
          "label": "HTML Tag",
          "default": "h1",
          "options": ["h1", "h2", "h3", "h4", "h5", "h6", "div", "span", "p"]
        },
        {
          "id": "link",
          "type": "URL",
          "label": "Link",
          "dynamic": true,
          "placeholder": "https://your-link.com"
        }
      ],
      "style": [
        {
          "id": "heading_typography",
          "type": "TYPOGRAPHY",
          "label": "Typography",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "text_color",
          "type": "COLOR",
          "label": "Text Color",
          "default": "",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "color"
        },
        {
          "id": "text_shadow",
          "type": "TEXT_SHADOW",
          "label": "Text Shadow",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "blend_mode",
          "type": "SELECT",
          "label": "Blend Mode",
          "options": ["normal", "multiply", "screen", "overlay", "darken", "lighten", "color-dodge", "color-burn", "hard-light", "soft-light", "difference", "exclusion", "hue", "saturation", "color", "luminosity"]
        }
      ],
      "advanced": [
        {
          "id": "margin",
          "type": "DIMENSIONS",
          "label": "Margin",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "margin"
        },
        {
          "id": "padding",
          "type": "DIMENSIONS",
          "label": "Padding",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "padding"
        },
        {
          "id": "animation",
          "type": "ANIMATION",
          "label": "Entrance Animation"
        },
        {
          "id": "animation_duration",
          "type": "SELECT",
          "label": "Animation Duration",
          "default": "",
          "options": ["slow", "normal", "fast"]
        }
      ]
    },
    "h2": {
      "extends": "h1",
      "label": "Heading 2"
    },
    "h3": {
      "extends": "h1",
      "label": "Heading 3"
    },
    "h4": {
      "extends": "h1",
      "label": "Heading 4"
    },
    "h5": {
      "extends": "h1",
      "label": "Heading 5"
    },
    "h6": {
      "extends": "h1",
      "label": "Heading 6"
    },
    "p": {
      "label": "Paragraph",
      "content": [
        {
          "id": "text",
          "type": "TEXTAREA",
          "label": "Text",
          "default": "",
          "dynamic": true
        }
      ],
      "style": [
        {
          "id": "typography",
          "type": "TYPOGRAPHY",
          "label": "Typography",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "text_color",
          "type": "COLOR",
          "label": "Text Color",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "color"
        }
      ],
      "advanced": [
        {
          "id": "margin",
          "type": "DIMENSIONS",
          "label": "Margin",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
