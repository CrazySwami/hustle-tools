        }
      ]
    },
    "form": {
      "label": "Form",
      "content": [
        {
          "id": "form_action",
          "type": "URL",
          "label": "Form Action",
          "default": ""
        },
        {
          "id": "form_method",
          "type": "SELECT",
          "label": "Method",
          "options": ["post", "get"],
          "default": "post"
        }
      ],
      "style": [
        {
          "id": "background",
          "type": "BACKGROUND",
          "label": "Background",
          "selector": "{{WRAPPER}} {{SELECTOR}}"
        },
        {
          "id": "padding",
          "type": "DIMENSIONS",
          "label": "Padding",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "padding"
        },
        {
          "id": "margin",
          "type": "DIMENSIONS",
          "label": "Margin",
          "selector": "{{WRAPPER}} {{SELECTOR}}",
          "property": "margin"
        }
      ]
    },
    "ul": {
      "label": "List",
      "content": [
        {
          "id": "list_items",
          "type": "REPEATER",
          "label": "List Items",
          "fields": [
            {
              "name": "text",
              "type": "TEXT",
              "label": "Text",
              "default": "List Item"
            },
            {
              "name": "icon",
              "type": "ICONS",
              "label": "Icon"
            }
          ],
          "default": [
            { "text": "List item 1" },
            { "text": "List item 2" },
            { "text": "List item 3" }
          ]
        }
      ],
      "style": [
        {
          "id": "typography",
          "type": "TYPOGRAPHY",
          "label": "Typography",
          "selector": "{{WRAPPER}} {{SELECTOR}} li"
        },
        {
          "id": "text_color",
          "type": "COLOR",
          "label": "Text Color",
          "selector": "{{WRAPPER}} {{SELECTOR}} li",
          "property": "color"
        },
        {
          "id": "icon_color",
          "type": "COLOR",
          "label": "Icon Color",
          "selector": "{{WRAPPER}} {{SELECTOR}} li i",
          "property": "color"
        },
        {
          "id": "spacing",
          "type": "SLIDER",
          "label": "Space Between",
          "range": { "min": 0, "max": 50, "unit": "px" },
          "selector": "{{WRAPPER}} {{SELECTOR}} li:not(:last-child)",
          "property": "margin-bottom"
        }
      ]
    },
    "ol": {
      "extends": "ul",
      "label": "Ordered List"
    },
    "video": {
      "label": "Video",
      "content": [
        {
          "id": "video_source",
          "type": "SELECT",
          "label": "Source",
          "options": ["youtube", "vimeo", "self"],
          "default": "youtube"
        },
        {
          "id": "youtube_url",
          "type": "TEXT",
          "label": "YouTube URL",
          "condition": { "video_source": "youtube" }
        },
        {
          "id": "vimeo_url",
          "type": "TEXT",
          "label": "Vimeo URL",
          "condition": { "video_source": "vimeo" }
        },
        {
          "id": "self_video",
          "type": "MEDIA",
          "label": "Video File",
          "condition": { "video_source": "self" },
          "media_type": "video"
        },
        {
          "id": "autoplay",
          "type": "SWITCHER",
          "label": "Autoplay",
          "default": "no"
        },
        {
          "id": "mute",
          "type": "SWITCHER",
          "label": "Mute",
          "default": "no"
        },
        {
          "id": "controls",
          "type": "SWITCHER",
          "label": "Controls",
          "default": "yes"
        }
      ],
      "style": [
        {
          "id": "aspect_ratio",
          "type": "SELECT",
          "label": "Aspect Ratio",
          "options": ["16:9", "4:3", "3:2", "9:16"],
          "default": "16:9"
        }
      ]
    }
  },
  "widgetCategories": {
    "general": "General",
